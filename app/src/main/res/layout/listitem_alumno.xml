<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp"
    android:background="@color/colorLightGray">

    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/user_empty"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_nombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_foto"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:text="Nombres"
        android:textColor="@color/colorBlack"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tv_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nombres"
        android:layout_alignLeft="@+id/tv_nombres"
        android:layout_alignStart="@+id/tv_nombres"
        android:text="Apellidos"
        android:textSize="26dp" />

    <ImageButton
        android:id="@+id/ibt_ubicacion"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/location_pin_compact_flat"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhite"/>

</RelativeLayout>